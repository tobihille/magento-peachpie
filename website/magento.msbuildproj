<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Description>Magento CE compiled to .NET by Peachpie</Description>

    <NoWarn>PHPX0181,PHP3012,PHP3007,PHP3010,PHPX0125,PHP3011</NoWarn>
      <!-- PHPX0181 Assigning the return value of new by reference is deprecated -->
      <!-- PHP3012 Unreachable code detected -->
      <!-- PHP3007 Undefined variable -->
      <!-- PHP3010 Use of 'eval()' is discouraged -->
      <!-- PHPX0125 mandatory parameter declared behind optional one -->
      <!-- PHP3011 The declaration of 'class' is ambiguous -->
    <LangVersion>7.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="**/*.phtml;**/*.php" Exclude="dev/**;**/Test/**;downloader/**" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Peachpie.Compiler.Tools" Version="0.9.0-CI00947" />
    <PackageReference Include="Peachpie.NET.Sdk" Version="0.9.0-CI00947" PrivateAssets="Build" />
    <PackageReference Include="Peachpie.Library.Graphics" Version="0.9.0-CI00947" />
    <PackageReference Include="Peachpie.Library.Network" Version="0.0.0-*" />
    <PackageReference Include="Peachpie.Library.XmlDom" Version="0.9.0-dev" />
    <PackageReference Include="Peachpie.Library" Version="0.9.0-dev" />
  </ItemGroup>

</Project>